%       of two commands, like \cmd\`\cmd\i\ or \cmd\U\cmd\CYRI, hence,
%       \cmd\string\ wouldn't be safe enough.
%    \begin{macrocode}
    \MT@ifdefined@n@TF{\MT@encoding\MT@detokenize@c\@tempa}%
      \MT@is@symbol
%    \end{macrocode}
